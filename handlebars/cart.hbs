{{#if quantity}}
<label for="cart_toggle">{{quantity}} items</label>
<input id="cart_toggle" type="checkbox" />
<div id="items">
  <ul>
    {{#each items}}
    <li>
      <a data-id="{{id}}" href="#">Remove</a>
      {{title}} x {{quantity}}
      <small>${{format_price price}}</small>
    </li>
    {{/each}}
  </ul>
  <p>${{format_price total}}</p>
  <a class="button checkout" href="/checkout">Check Out</a>
</div>
{{else}}
<p>0 items</p>
{{/if}}
