include /_mixins
doctype html
html
  head
    title= title
    link(href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet')
    +stylesheet_link_tag('application')
    +javascript_include_tag('vendor/all')
    +javascript_include_tag('handlebars_templates')
  body
    header
      #user_options
      #cart

    main
      block content
    +javascript_include_tag('application')
    +javascript_include_tag('models/album', 'models/user')
    +javascript_include_tag('collections/albums', 'collections/cart_items')
    +javascript_include_tag('views/album', 'views/new_album', 'views/index', 'views/cart', 'views/user', 'views/login', 'views/signup', 'views/edit_album', 'views/checkout')
    script(type="text/javascript").
      App.albums = new Albums(!{JSON.stringify(albums)});
    +javascript_include_tag('router')
    block scripts
